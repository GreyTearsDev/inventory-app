<section class="bg-gray-900 
                rounded-lg 
                shadow-lg 
                px-8 
                py-6 
                mx-8 
                my-6 
                text-gray-50">
  <h1 class="text-3xl 
             font-bold 
             text-amber-400 
             mb-4"><%= genre.name%></h1>

  <% if (comic_list.length > 0) { %>
  <p class="text-lg text-gray-300 mb-2">Delete the following comics before attempting to delete this genre:</p>
      <% comic_list.forEach(comic => { %>
        <a href="<%= comic.url%>"><p class="ml-4 text-amber-400 hover:text-gray-50"><%= comic.title%></p></a>
      <% }) %>
  <% } else { %>
  <p class="mb-4">Do you really want to delete this genre?</p>
  
  <form method="POST">
  </form>
  <form method="POST">
    <div class="hidden" > 
      <input 
        id="genreid" 
        class="form-control" 
        type="hidden" 
        name="genreid" 
        value="<%= genre.id%>" 
      />
    </div>
    <button class="bg-red-600 
                    text-gray-50 
                    hover:bg-red-700 
                    font-bold 
                    py-2 
                    px-4 
                    rounded 
                    transition 
                    duration-100 
                    ease-in-out" 
            type="submit">
      Delete
    </button>
  </form>
<% } %>
</section>
