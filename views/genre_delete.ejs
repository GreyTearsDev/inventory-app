<h1><%= title%>: <%= genre.name%></h1>

<% if (comic_list.length) { %>
  <p><strong>Delete the following comics before attempting to delete this genre.</strong></p>
  <div style='margin-left:20px;margin-top:20px'>
    <h4>Comics of this genre:</h4>
    <dl>
      <% comic_list.forEach(comic => { %>
        <dt><a href="<%= comic.url %>"><%= comic.title%></a></dt>
      <% }) %>
    </dl>
  </div>
<% } else { %>
  <p>Do you really want to delete this genre?</p>
  <form method="POST">
    <div class="form-group"> 
      <input 
        id="genreid" 
        class="form-control" 
        type="hidden" 
        name="genreid" 
        value="<%= genre._id%>" 
      />
    </div>
    <button class="btn btn-primary" type="submit">Delete</button>
  </form>
<% } %>
