<% if (errors.length > 0) { %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg my-6 max-w-fit">
    <ul class="list-disc pl-5">
      <% errors.forEach(error => { %>
        <li class="flex items-center">
          <span class="mr-2 text-red-600">⚠️</span>
          <%= error.msg %>
        </li>
      <% }) %>
    </ul>
  </div>
<% } %>
