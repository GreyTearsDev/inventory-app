<section class="bg-gray-900 
                rounded-lg 
                shadow-lg 
                px-8 
                py-6 
                mx-8 
                my-6 
                text-gray-50">
  <h1 class="text-3xl 
             font-bold 
             text-amber-400 
             mb-4">
    <%= title %>: <%= comic.title %>
  </h1>

  <p class="text-lg text-gray-300 mb-4">
    Do you really want to delete this comic?
  </p>

  <form method="POST">
    <div class="hidden"> 
      <input 
        id="comicid" 
        type="hidden" 
        name="comicid" 
        value="<%= comic.id %>" 
      />
    </div>
    <button class="bg-red-600 
                    text-gray-50 
                    hover:bg-red-700 
                    font-bold 
                    py-2 
                    px-4 
                    rounded 
                    transition 
                    duration-100 
                    ease-in-out" 
            type="submit">
      Delete
    </button>
  </form>
</section>
