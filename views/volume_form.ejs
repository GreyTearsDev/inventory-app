<h1 class="text-4xl font-bold text-gray-900 mb-6"><%= title %></h1>

<form method="POST" class="bg-gray-900 p-8 rounded-lg shadow-md">
  <%- include("./partials/required_form_fields_warning") %>
  
  <div class="form-group mb-6 text-gray-900">
    <label for="volume_number" class="block text-lg font-medium text-gray-50">* Volume number:</label>
    <input 
      id="volume_number" 
      class="form-control mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-opacity-50" 
      type="number" 
      name="volume_number" 
      min="1" 
      required
      value="<%= last_volume_number ? last_volume_number + 1 : '1'%>"
    />

    <label for="volume_title" class="block text-lg font-medium text-gray-50 mt-4">* Title:</label>
    <input 
      id="volume_title" 
      class="form-control mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-opacity-50" 
      type="text" 
      name="volume_title" 
      maxLength="100"
      value="<%= volume ? volume.title : ''%>"
      placeholder="e.g.: Naruto, Bakuman, etc." 
      required
    />

    <label for="release_date" class="block text-lg font-medium text-gray-50 mt-4">* Release date:</label>
    <input
      type="date"
      id="release_date"
      class="form-control mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-opacity-50"
      name="volume_release_date"
      required
      value="<%= volume_release_date %>"
    />

    <label for="volume_description" class="block text-lg font-medium text-gray-50 mt-4">* Description:</label>
    <textarea
      id="volume_description" 
      class="form-control mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-opacity-50"
      name="volume_description" 
      cols="24"
      rows="6"
      maxLength="200"
      required
    ><%= volume ? volume.description : '' %></textarea>
  </div>

  <button class="bg-amber-400 text-white hover:bg-gray-50 hover:text-amber-400 font-bold py-2 px-4 rounded transition duration-150 ease-in-out" type="submit">Submit</button>

  <%- include("./partials/form_error_messages_display") %>
</form>
