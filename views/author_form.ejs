<h1 class="text-4xl font-bold text-gray-900 mb-6"><%= title %></h1>

<form method="POST" class="bg-gray-900 p-8 rounded-lg shadow-md">
  <%- include("./partials/required_form_fields_warning") %>
  
  <div class="form-group mb-6 text-gray-900">
    <label for="first_name" class="block text-lg font-medium text-gray-50">* First name:</label>
    <input 
      id="first_name" 
      class="form-control mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-opacity-50" 
      type="text" 
      maxLength="40"
      placeholder="John" 
      name="first_name" 
      required 
      value="<%= author ? author.first_name : '' %>" 
    />

    <label for="last_name" class="block text-lg font-medium text-gray-50 mt-4">* Last name:</label>
    <input 
      id="last_name" 
      class="form-control mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-opacity-50" 
      type="text" 
      maxLength="40"
      placeholder="Doe" 
      name="last_name" 
      required 
      value="<%= author ? author.last_name : '' %>" 
    />
  </div>

  <button class="bg-amber-400 text-white hover:bg-gray-50 hover:text-amber-400 font-bold py-2 px-4 rounded transition duration-150 ease-in-out" type="submit">Submit</button>

  <%- include("./partials/form_error_messages_display") %>
</form>
