  <% if (comic_list.length > 0) { %>

    <section class="flex flex-col gap-2 mx-8">
      <h1><%= title %></h1>
      <% comic_list.forEach(comic => { %>

        <a href="<%=comic.url %>">
          <article class="bg-gray-900 h-30 rounded-lg px-6 py-4  transition-transform transform hover:scale-105 hover:shadow-lg">
            <h3 class="text-2xl text-amber-400 pb-2"><%= comic.title %></h3>
            <p class="text-m text-gray-300 "><%= comic.summary %></p>
          </article>
        </a>

       <% }) %>
    </section>

  <% } else { %>

    <p>There are no <%= title %></p>

  <% } %>


