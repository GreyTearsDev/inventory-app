<section class="bg-gray-900 
                rounded-lg 
                shadow-lg 
                px-8 
                py-6 
                mx-8 
                my-6 
                text-gray-50">
  <h1 class="text-3xl 
             font-bold 
             text-amber-400 
             mb-4"><%= author.name%></h1>

  <% if (comic_list.length > 0) { %>
    <p class="text-lg text-gray-300 mb-2"> Work by <%= author.name %></p>
      <% comic_list.forEach((comic, index) => { %>
        <a href="<%= comic.url%>"><p class="ml-4 text-amber-400 hover:text-gray-50"><%= comic.title%></p></a>
      <% }) %>
  <% } else { %>
    <p class="mb-4"> There are no comics associated with this author yet.</p>
  <% } %>
  <div class="flex gap-4 mt-4">
    <p class="text-amber-400"><a href="<%= author.url %>/update">Update</a></p>
    <p class="text-amber-400"><a href="<%= author.url %>/delete">Delete</a></p>
  </div>
</section>
