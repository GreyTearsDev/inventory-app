<section class="container">
  <h2><%= title %></h2>
  <p><strong>Author:</strong> <a href="<%= comic.author.url %>"><%= comic.author.name %></a></p>
  <p><strong>Publisher:</strong> <a href="<%= comic.publisher.url %>"><%= comic.publisher.name %></a></p>
  <p><strong>Release date:</strong> <%= comic.date_formatted %><p>

  <ul>
    <% comic.genres.forEach((genre, index) => { %>
      <li><%= genre.name %></li>
    <% }) %>
  </ul>

  <p><strong>Summary</strong>: <%= comic.summary %></p>

  <% if (comic.volumes.length > 0) { %>
    <div>
      <% comic.volumes.forEach((volume, index) => { %>
        <p>
          <a href="<%= volume.url %>">
            Volume <%= volume.volume_number%> - <%= volume.title%>
          </a>
        </p>
      <% }) %>
    </div>
    <p><a href="<%= comic.url %>/volume/create">Add a new volume</a></p>
  <% } else { %>
    <p>There are no volumes yet!</p>
    <p><a href="<%= comic.url %>/volume/create">Add the first volume</a></p>
  <% } %>
</section>
