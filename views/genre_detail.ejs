<article>
  <h2>Genre: <%= genre.name%></h2>

  <% if (comic_list.length > 0) { %>
    <p>Works of this genre</p>
    <ul>
      <% comic_list.forEach(comic => { %>
        <li><a href="<%= comic.url%>"><%= comic.title%></a></li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>There are no works of this genre yet!</p>
  <% } %>
  <p><a href="<%= genre.url%>/update">Update genre's info</a></p>
</article>
